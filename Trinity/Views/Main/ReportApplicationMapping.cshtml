
<div class="col-lg-8 col-md-6 main-content full-width basic-page sidebar" style="width:83%;">
    <h4>      Manage Report Application Mapping </h4>
    <div class="row">
        <div ng-controller="ReportsApplicationMappingController" class="nav-tabs-custom">
            <div ng-include="'Main/ConfirmModal'"></div>
            <div class="row pull-right">
                <button ng-show="!showAddwindow" data-ng-click="Showadd()" class="btn btn-primary">Add <i class="fa fa-plus"></i></button>
            </div>
            <div ng-show="showAddwindow" class="sec-one">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>FTA Application</label>
                        <select class="form-control" name="ddlSBU" ng-model="selectModel.FTAApplicationName" ng-options="item.FTAApplicationName for item in FTAApplicationNameList" title="Select FTAApplication" style="width:100%;font-size: 0.8em" required>
                            <option value="">- Select FTAApplication Name-</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>FTAApplicationCode</label>
                        <select class="form-control" name="ddlSBU" ng-model="selectModel.FTAApplicationCode" ng-options="item.FTAApplicationCode for item in FTAApplicationCodeList" title="Select FTAApplication Code" style="width:100%;font-size: 0.8em" required>
                            <option value="">- Select FTAApplication Code-</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>ChildID </label>
                        <select class="form-control" name="ddlSBU" ng-model="selectModel.ChildID" ng-options="item.ChildID for item in ChildIDList" title="Select FTAApplicationSuffix" style="width:100%;font-size: 0.8em" required>
                            <option value="">- Select ChildID -</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>ThirdParty Application</label>
                        <select class="form-control" name="ddlSBU" ng-model="selectModel.ThirdPartyApp" ng-options="item.Value for item in ThirdPartyList" title="Select FTAApplicationSuffix" style="width:100%;font-size: 0.8em" required>
                            <option value="">- Select ThirdParty-</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Business Line </label>
                        <select class="form-control" name="ddlSBU" ng-model="selectModel.BusinessLine" ng-options="item.BusinessLine for item in BusinessLineList" ng-change="userfilter(false)" title="Select BusinessLine" style="width:100%;font-size: 0.8em" required>
                            <option value="">- Select BusinessLine-</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label>Parent ID</label>
                        <select class="form-control" name="ddlSBU" ng-model="selectModel.ParentID" ng-options="item.ParentID for item in ParentIDList" title="Select ParentID" style="width:100%;font-size: 0.8em" required>
                            <option value="">- Select ParentID-</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Application Owner</label>
                        <select class="form-control" name="ddlSBU" ng-model="selectModel.FTAApplicationOwner" ng-options="item.userId for item in FTAApplicationOwnerList" title="Select FTAApplicationOwner" style="width:100%;font-size: 0.8em" required>
                            <option value="">- Select FTAApplicationOwner -</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Application Category</label>
                        <select class="form-control" name="ddlSBU" ng-model="selectModel.ApplicationCategory" ng-options="item.ApplicationCategory for item in ApplicationCategoryList" title="Select Application Category" style="width:100%;font-size: 0.8em" required>
                            <option value="">- Select ApplicationCategory -</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Region</label>
                        <select class="form-control" name="ddlSBU" ng-model="selectModel.Region" ng-options="item.RegionName for item in RegionMasterList" title="Select Region" style="width:100%;font-size: 0.8em" required>
                            <option value="">- Select User Region -</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Country</label>
                        <select class="form-control" name="ddlSBU" ng-model="selectModel.Country" ng-options="item.CountryName for item in CountryMasterList" title="Select Division" style="width:100%;font-size: 0.8em" required>
                            <option value="">- Select Country -</option>
                        </select>

                    </div>

                    <div class="row col-md-12">
                        <button data-ng-show="editMode" data-ng-click="UpdateFTAApplicationMaster(FTAApplicationMaster)" class="col-md-2 col-md-offset-1 btn btn-primary">Update</button>
                        <button data-ng-show="!editMode" data-ng-click="add(selectModel)" class="col-md-2 col-md-offset-1 btn btn-primary">Add </button>
                        <button data-ng-click="Confirmcancel()" class="col-md-2 btn btn-primary cancel">Cancel </button>


                    </div>
                </div>
            </div>
            <div ng-show="!showAddwindow" class="col-md-12 data-table">
                <div class="row">
                    <table class="table table-responsive" datatable="" dt-options="dtOptions" dt-columns="dtColumns"></table>
                </div>
            </div>
        </div>
    </div>
</div>

